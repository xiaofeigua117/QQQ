<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RadioGroup
        android:layout_marginTop="1dp"
        android:id="@+id/rg_mian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_main_one"
            style="@style/rt_button"
            android:background="@drawable/lamp_two_xml"
            android:text="关闭"
           />

        <RadioButton
            android:id="@+id/rb_main_two"
            style="@style/rt_button"
            android:background="@drawable/lamp_two_xml"
            android:text="一级"
            />

        <RadioButton
            android:id="@+id/rb_main_three"
            android:background="@drawable/lamp_two_xml"
            android:text="二级"
            style="@style/rt_button"
          />

        <RadioButton
            android:id="@+id/rb_main_four"

            android:background="@drawable/lamp_two_xml"
            style="@style/rt_button"
            android:text="三级"
           />

        <RadioButton
            android:id="@+id/rb_main_five"
            style="@style/rt_button"
            android:background="@drawable/lamp_two_xml"

            android:text="四级"
          />

        <RadioButton
            android:id="@+id/rb_main_six"
            style="@style/rt_button"
            android:background="@drawable/lamp_two_xml"
            android:text="五级"
            />
        <RadioButton
            android:id="@+id/rb_main_seven"
            style="@style/rt_button"
            android:background="@drawable/lamp_there_xml"
            android:text="六级"
            />
        <RadioButton
            android:id="@+id/rb_main_eight"
            style="@style/rt_button"
            android:background="@drawable/lamp_there_xml"
            android:text="七级"
            />
    </RadioGroup>

    <TextView


        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/lamp_main"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"

        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

      android:layout_gravity="center"

        android:layout_marginTop="45dp">

        <LinearLayout
            android:id="@+id/ll_mainpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gray_round"
            />

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gray_round"
                />
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gray_round"
                />
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gray_round"
                />
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gray_round"
                />
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gray_round"
                />
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gray_round"
                />
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gray_round"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/red_round" />
    </FrameLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_sub"
            android:layout_width="35dp"
            android:layout_height="35dp"


            android:background="@drawable/button_sud" />

        <SeekBar
            android:layout_marginTop="3dp"
            android:id="@+id/sb_window_bar"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:maxHeight="20dp"
            android:minHeight="20dp"
            android:progressDrawable="@drawable/seekbar_main_bg"
            android:thumb="@drawable/seekbar_main_thumb" />
        />

        <Button
            android:id="@+id/bt_add"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/button_add" />

    </LinearLayout>


</LinearLayout>
