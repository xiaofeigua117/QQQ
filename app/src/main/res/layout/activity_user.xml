<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_bgo">

    <TextView
        android:id="@+id/user_title"
        android:layout_width="950dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:background="@drawable/u_title" />


    <RelativeLayout
        android:id="@+id/user_linear"
        android:layout_width="760dp"
        android:layout_height="490dp"
        android:layout_below="@id/user_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/user_frame"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_u"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="80dp"
            android:text="用户名："
            android:textColor="@color/user_title"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="500dp"
            android:layout_height="60dp"
            android:layout_alignBaseline="@+id/user_u"
            android:layout_alignBottom="@+id/user_u"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="28dp"
            android:layout_toEndOf="@+id/user_u"
            android:background="@drawable/user_edit" />


        <TextView
            android:id="@+id/user_mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_u"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="80dp"
            android:text=" 密 码："
            android:textColor="@color/user_title"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/user_mmj"
            android:layout_width="500dp"
            android:layout_height="60dp"
            android:layout_below="@id/user_u"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/user_edit" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/user_mmj"
            android:layout_below="@+id/user_mmj"
            android:layout_marginTop="29dp"
            android:text="记住密码"
            android:textColor="@color/user_title"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/checkBox"
            android:layout_alignBottom="@+id/checkBox"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="67dp"
            android:text="忘记密码？"
            android:textColor="@color/user_title"
            android:textSize="30dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/checkBox"
            android:layout_alignTop="@+id/button2"
            android:background="@drawable/user_button"
            android:text="登 录"
            android:textColor="#FFFFFF"
            android:textSize="40dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView"
            android:layout_below="@+id/textView"
            android:layout_marginTop="60dp"
            android:background="@drawable/user_button"
            android:text="取 消"
            android:textColor="#FFFFFF"
            android:textSize="40dp" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/user_b"
        android:gravity="center"
        android:text="北 京 齐 家 怡 居 科 技 有 限 责 任 公 司"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        />


</RelativeLayout>