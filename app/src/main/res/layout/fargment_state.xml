<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/titlebbj"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:text="2019年1月30日 12:05分"
        android:textColor="#ffffff"
        android:textSize="30sp" />



</LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="640dp"
    android:background="@drawable/statebj">

    <LinearLayout
        android:id="@+id/bj_wd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/state_wd"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="382dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="33dp"
            android:text="温度"
            android:textColor="#ffffff"
            android:textSize="33sp" />

        <TextView
            android:id="@+id/tv_wd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:text="23°C"
            android:textColor="#ffffff"
            android:textSize="45sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bj_sd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/state_sd"
        android:orientation="vertical"
        android:layout_toRightOf="@id/bj_wd"
        android:layout_marginLeft="15dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="33dp"
            android:text="湿度"
            android:textColor="#ffffff"
            android:textSize="33sp" />

        <TextView
            android:id="@+id/tv_sd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:text="20%"
            android:textColor="#ffffff"
            android:textSize="45sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bj_kqzl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/state_kqzl"
        android:orientation="vertical"
        android:layout_toRightOf="@id/bj_sd"
        android:layout_marginLeft="15dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="33dp"
            android:text="空气质量"
            android:textColor="#ffffff"
            android:textSize="33sp" />

        <TextView
            android:id="@+id/tv_kqzl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:text="优"
            android:textColor="#ffffff"
            android:textSize="45sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bj_jq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/state_jq"
        android:orientation="vertical"
        android:layout_toRightOf="@id/bj_kqzl"
        android:layout_marginLeft="15dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="33dp"
            android:text="甲醛"
            android:textColor="#ffffff"
            android:textSize="33sp" />

        <TextView
            android:id="@+id/tv_jq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:text="1PPB"
            android:textColor="#ffffff"
            android:textSize="38sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bj_pmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/state_pm2"
        android:orientation="vertical"
        android:layout_below="@id/bj_sd"
        android:layout_alignLeft="@id/bj_sd"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="33dp"
            android:text="PM2.5"
            android:textColor="#ffffff"
            android:textSize="33sp" />

        <TextView
            android:id="@+id/tv_pmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="20"
            android:textColor="#ffffff"
            android:textSize="30sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="MG/M3"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bj_pms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/state_pm2"
        android:orientation="vertical"
        android:layout_below="@id/bj_kqzl"
        android:layout_alignLeft="@id/bj_kqzl"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="33dp"
            android:text="PM10"
            android:textColor="#ffffff"
            android:textSize="33sp" />

        <TextView
            android:id="@+id/tv_pms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="20"
            android:textColor="#ffffff"
            android:textSize="30sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="MG/M3"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bj_eyht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/state_eyht"

        android:orientation="vertical"
        android:layout_below="@id/bj_jq"
        android:layout_alignLeft="@id/bj_jq"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="33dp"
            android:text="二氧化碳"
            android:textColor="#ffffff"
            android:textSize="33sp" />

        <TextView
            android:id="@+id/tv_eyht"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="20"
            android:textColor="#ffffff"
            android:textSize="30sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="ppm"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </LinearLayout>
</RelativeLayout>


</LinearLayout>